<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lanma.customviewproject"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.HexagonTextViewDemoActivity"
            android:label="@string/HexagonTextViewDemoActivity">
        </activity>
        <activity android:name=".activities.RippleViewActivity">
        </activity>
        <activity android:name=".activities.TouchEventTestActivity">
        </activity>
        <activity android:name=".activities.VolumeControlViewActivity">
        </activity>
        <activity android:name=".activities.SlideLayoutActivity">
        </activity>
        <activity android:name=".activities.ElasticityScrollViewActivity">
        </activity>
        <activity android:name=".activities.StateLineActivity">
        </activity>
        <activity android:name=".activities.RadarSearchViewActivity">
        </activity>
        <activity android:name=".activities.ListPopupWindowActivity">
        </activity>
    </application>

</manifest>