<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HexagonTextView">
        <attr name="leftTopText" format="string"/>
        <attr name="rightBottomText" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="lineColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="StateLine">
        <attr name="selectedCircleColor" format="color"/>
        <attr name="selectedLineColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="RippleView">
        <attr name="rippleVelocity" format="integer"/>
        <attr name="rippleWidth" format="integer"/>
        <attr name="rippleViewColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="RadarSearchView">
        <attr name="radiusLevel" format="integer"/>
        <attr name="insideText" format="string"/>
        <attr name="insideTextColor" format="color"/>
        <attr name="insideLineColor" format="color"/>
        <attr name="circleColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="VolumeControlView">
        <attr name="circleTextColor" format="color"/>
        <attr name="circleTextSize" format="integer"/>
        <attr name="CircleColor" format="color"/>
        <attr name="circleRadius" format="integer"/>
        <attr name="circleWidth" format="integer"/>
        <attr name="blockColor" format="color"/>
        <attr name="blockTotalCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="DashView">
        <attr name="dashCount" format="integer"/>
        <attr name="dashColor" format="color"/>
        <attr name="dashDirection" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="dashShape" format="enum">
            <enum name="rectangle" value="0"/>
            <enum name="round" value="1"/>
        </attr>
        <attr name="dashWidth" format="dimension"/>
        <attr name="dashHeight" format="dimension"/>
        <attr name="dashRange" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="ScrapeView">
        <attr name="backgroundBitmap" format="reference"/>
        <attr name="foregroundBitmap" format="reference"/>
        <attr name="paintWidth" format="dimension"/>
        <attr name="successPercent" format="float"/>
        <attr name="backgroundText" format="string"/>
        <attr name="backgroundTextSize" format="dimension"/>
        <attr name="scrapeStyle" format="enum">
            <enum name="image" value="0"/>
            <enum name="text" value="1"/>
        </attr>
    </declare-styleable>
</resources>